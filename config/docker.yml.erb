default: &default
  connection_timeout: 3
  pool:
    active: false
    interval: 15
    maximum_refill_count: 32
  ports: !ruby/range 4500..4600

development:
  <<: *default
  host: tcp://192.168.23.75:2375
  workspace_root: <%= File.join('/', 'shared', Rails.env) %>

production:
  <<: *default
  pool:
    active: true
  workspace_root: <%= Rails.root.join('tmp', 'files', Rails.env) %>

test:
  <<: *default
  host: tcp://192.168.23.75:2375
  workspace_root: <%= File.join('/', 'shared', Rails.env) %>
